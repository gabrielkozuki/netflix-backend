<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.mycompany.controle.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>com.mycompany.controle.test</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>trending</servlet-name>
        <servlet-class>com.mycompany.controle.trending</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>netflixoriginals</servlet-name>
        <servlet-class>com.mycompany.controle.netflixoriginals</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>toprated</servlet-name>
        <servlet-class>com.mycompany.controle.toprated</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>comedy</servlet-name>
        <servlet-class>com.mycompany.controle.comedy</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>romances</servlet-name>
        <servlet-class>com.mycompany.controle.romances</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>documentaries</servlet-name>
        <servlet-class>com.mycompany.controle.documentaries</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>trending</servlet-name>
        <url-pattern>/trending</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>netflixoriginals</servlet-name>
        <url-pattern>/netflixoriginals</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>toprated</servlet-name>
        <url-pattern>/toprated</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>comedy</servlet-name>
        <url-pattern>/comedy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>romances</servlet-name>
        <url-pattern>/romances</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>documentaries</servlet-name>
        <url-pattern>/documentaries</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>CORS</filter-name>
        <filter-class>com.thetransactioncompany.cors.CORSFilter</filter-class>
        <init-param>
            <param-name>cors.allowOrigin</param-name>
            <param-value>*</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CORS</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
